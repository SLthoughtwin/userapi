<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css" />
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link rel="stylesheet" href="/css/style2.css" />
</head>

<body class="bg-info">
    
<div class="container rounded bg-white mt-5">
    {{#result}}
    <form action="/update/{{this.id}}" method="post">
      
    <div class="row">
        
        <div class="col-md-4 border-right">
            <div class="d-flex flex-column align-items-center text-center p-3 py-5"><img class="rounded-circle mt-5" src="/{{this.avatar}}" width="90"><span class="font-weight-bold">{{this.name}}</span><span class="text-black-50">{{this.email}}</span><span><strong>India</strong></span></div>
        </div>
        <div class="col-md-8">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div class="d-flex flex-row align-items-center back"><i class="fa fa-long-arrow-left mr-1 mb-1"></i>
                        <h6><a href="http://localhost:8080/show">Back to home</a></h6>
                    </div>
                    <h6 class="text-right">Edit Profile</h6>
                </div>
                
                <div class="row mt-2">
                    <div class="col-md-6"><input type="text" class="form-control"  value="{{this.name}}" name="name"></div>
                    <div class="col-md-6"><input type="email" class="form-control" value="{{this.email}}" name="email"></div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-6"><input type="text" class="form-control" value="{{this.lastname}}" name="lastname"></div>
                    <div class="col-md-6"><input type="number" class="form-control" value="{{this.phone}}" name="phone"></div>
                </div>
            
                <div class="mt-5 text-right"><button class="btn btn-primary profile-button " type="submit">Save Profile</button></div>
                
            </div>
        </div>
    </div>
    
    </form>
</div>
{{/result}}  

</body>
</html>